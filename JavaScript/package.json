{
  "name": "cryptik",
  "version": "1.0.0",
  "description": "JavaScript frontend for Cryptik, an end-to-end encrypted messaging platform",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ariadiamond/cs6903_project2.git"
  },
  "author": "Best Team Ever",
  "homepage": "https://github.com/ariadiamond/cs6903_project2#readme",
  "devDependencies": {
    "eslint": "^8.4.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2021":  true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 13,
      "sourceType": "module"
    },
    "rules": {
      "indent": ["error", 2, { "SwitchCase": 1 }],
      "linebreak-style": ["error", "unix"],
      "camelcase": "warn",
      "complexity": "error",
      "max-len": ["error", {
        "code": 80, 
        "tabWidth": 2, 
        "ignoreUrls": true, 
        "ignoreStrings": true
      }],
      "no-extra-parens": "error",
      "func-names": "error",
      "no-shadow": "error",
      "max-lines-per-function": ["error", {
        "max": 30,
        "skipBlankLines": true,
        "skipComments": true
      }],
      "no-warning-comments": ["error", {"terms": ["TODO", "FIXME"]}] 
    }
  }
}
